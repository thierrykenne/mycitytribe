<?php

namespace City\CityTribeBundle\Form;

use Symfony\Component\Form\Form;
use Symfony\Component\HttpFoundation\Request;
use Doctrine\ORM\EntityManager;
use City\UserBundle\Entity\User;
use Symfony\Component\HttpFoundation\File\UploadedFile;

class AvatarHandler
{
    protected $form;
    protected $request;
    protected $em;

    public function __construct(Form $form, Request $request, EntityManager $em)
    {
        $this->form    = $form;
        $this->request = $request;
        $this->em      = $em;
    }

    public function process($dir,$id)
    {
        if( $this->request->getMethod() == 'POST' )
        {
            	$this->form->bindRequest($this->request);
		$file=$this->request->files->get($this->form->getName());
		$uploadedFile=$files["avatar"]["file"];
		var_dump($uploadedFile);
		$file=$this->form["avatar"]->getData();
		$extension = $file->guessExtension();
		$filename='avatar_'.$id.'.'.$extension;
		$file->move($dir, $filename);
		$this->form->getData()->setAvatar($filename);
                $this->onSuccess($this->form->getData());

        }

        return true;
    }

    public function onSuccess(User $user)
    {
        $this->em->persist($user);
        $this->em->flush();
    }

}

