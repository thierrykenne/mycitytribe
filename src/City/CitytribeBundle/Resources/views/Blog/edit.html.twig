
{% extends "CitytribeBundle::default.html.twig" %}
{% block middle %}
<div class="form-msg">
	<p><h2>Edit Subject</h2></p>

	<p> 
		<form action="{{ path('message_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>

		<div>
	    {{ form_label(form.titre) }}
        {{ form_widget(form.titre, { 'attr': {'class': 'titre'} }) }}
        </div>
        <div>
                {{ form_label(form.contenu) }}
                {{ form_widget(form.contenu, { 'attr': {'class': 'contenu'} }) }}
            </div>
            <div class="nationality">
                {{ form_label(form.nationality) }}
                {{ form_widget(form.nationality, { 'attr': {'class': 'nationality',
                'readonly':'readonly', 'value':countrytribe.d } }) }}
            </div>
              {{ form_rest(form) }}   
	    <p>
	        <button class="btn btn-success" type="submit">Create</button>
	    </p>
	</form>

</p>
</div>

{% endblock %}

